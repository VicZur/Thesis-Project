@model HeardHospitality.Models.EmployeeSignUpViewModel

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
    <p>Sign Up Page</p>


    <form asp-action="EmployeeSignUpSubmit" method="post">
        <input placeholder="Email" asp-for="Email" />
        <br />
        <input placeholder="Username" asp-for="Username" />
        <br />
        <input placeholder="Password" asp-for="UserPassword" />
        <br />
        <button type="submit">Submit</button>
    </form>

</div>
