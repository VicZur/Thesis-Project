@{
    ViewData["Title"] = "Job Details";
}

@model HeardHospitality.Models.JobPostingViewModel

@Html.Hidden("BusinessID")
@Html.Hidden("JobInfoID")
@Html.Hidden("JobPerkID")
@Html.Hidden("PerkID")
@Html.Hidden("Country")
@Html.Hidden("PhoneNum")
@Html.Hidden("IsActive")
@Html.Hidden("IsReported")

<div class="text-center">
    <h1 class="display-4">Job Details</h1>

    <table>
        <tr>
            <th>
                Business Name
            </th>
            <th>
                Job Title
            </th>
            <th>
                Job Description
            </th>
            <th>
                Salary
            </th>
            <th>
                Date Posted
            </th>
            <th>
                Minumum Experience
            </th>
            <th>
                Position Type
            </th>
            <th>
                Position Category
            </th>
            <th>
                Address Line 1
            </th>
            <th>
                Address Line 2
            </th>
            <th>
                City
            </th>
            <th>
                County
            </th>
            <th>
                EirCode
            </th>
        </tr>

        <tr>
            <td>
                @Model.BusinessName
            </td>
            <td>
                @Model.Title
            </td>
            <td>
                @Model.JobDescription
            </td>
            <td>
                @Model.Salary
            </td>
            <td>
                @Model.PostedDate
            </td>
            <td>
                @Model.MinExperience
            </td>
            <td>
                @Model.PositionType
            </td>
            <td>
                @Model.Category
            </td>
            <td>
                @Model.AddressLine1
            </td>
            <td>
                @Model.AddressLine2
            </td>
            <td>
                @Model.City
            </td>
            <td>
                @Model.County
            </td>
            <td>
                @Model.EirCode
            </td>
        </tr>
    </table>
    <p onclick="location.href= '@Url.Action("ReportJob", "Job", new { jobId=Model.JobInfoID })'">
        Report this Job
    </p>

</div>
