@{
    ViewData["Title"] = "Update Profile";
}

@model HeardHospitality.Models.BusinessInfoViewModel

@Html.Hidden("EmployeeID")
@Html.Hidden("LoginDetailID")

<div class="text-center">
    <h1 class="display-4">Update Profile</h1>


    <h2>Business Info</h2>



    <form asp-controller="Business" asp-action="Edit" method="post">

        <input placeholder="Business Name" asp-for="BusinessName" required/>
        <br />
        <input placeholder="Phone Number" asp-for="PhoneNum" required/>
        <br />
        <input placeholder="Address Line 1" asp-for="AddressLine1" required />
        <br />
        <input placeholder="Address Line 2" asp-for="AddressLine2" />
        <br />
        <input placeholder="City" asp-for="City" required />
        <br />
        <input placeholder="County" asp-for="County" required />
        <br />
        <input placeholder="EirCode" asp-for="EirCode" />
        <br />
        <input placeholder="Country" asp-for="Country" required />
        <br />
        <button type="submit" class="btn btn-secondary form-btn">Save</button>
    </form>

</div>